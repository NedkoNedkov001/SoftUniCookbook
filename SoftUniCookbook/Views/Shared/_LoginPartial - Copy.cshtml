@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Sidebar user panel (optional) -->
        <li class="nav-item">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <ul class="nav">
                    <div class="image">
                        <img src="~/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="/Identity/Account/Manage/" class="d-block">@User.Identity?.Name</a>
                    </div>

                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-item btn btn-link text-light">
                            <i class="fas fa-sign-out-alt"></i>
                            Sign Out
                        </button>
                    </form>
                    <ul>
            </div>
        </li>

    }
    else
    {
        <li class="nav-item">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                    <li class="nav-item">
                        <a href="/Identity/Account/Login/" class="nav-link">
                            <i class="fas fa-sign-in-alt"></i>
                            <p>
                                Sign In
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </li>
    }
</ul>
