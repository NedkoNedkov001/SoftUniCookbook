@using Cookbook.Core.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Profile";
}
@model UserEditViewModel

<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle" src="data:image;base64,@System.Convert.ToBase64String(@Model.Picture)" alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center">@Model.Username</h3>
                        <p class="text-muted text-center">@Model.Email</p>
                        <hr />
                        @if (Model.About == null || Model.About.Length == 0)
                        {
                            <p> User has no about me </p>
                        }
                        else
                        {
                            <p>@Model.About</p>
                        }
                        <a asp-action="Message" asp-controller="User" asp-route-userId="@Model.Id" class="btn btn-primary btn-block"><b>Message</b></a>
                    </div>

                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <h2>User settings</h2>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="settings">
                                <form class="form-horizontal" enctype=multipart/form-data data-np-checked="1" method="post">
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                                    <input type="hidden" asp-for="Picture" value="@System.Convert.ToBase64String(@Model.Picture)" />

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group row">
                                        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Username" class="form-control" placeholder="Username" data-np-checked="1">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Email" class="form-control" placeholder="Email" data-np-checked="1">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" data-np-checked="1">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="About" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <textarea asp-for="About" class="form-control" style="min-height: 40px; max-height: 130px" placeholder="About me"> </textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Picture" class="control-label"></label>
                                        <br />
                                        <input type="file" asp-for="NewPicture" name="UserPicture" id="UserPicture" />
                                        <span asp-validation-for="NewPicture" class="text-danger"></span>
                                    </div>

                                    <div class="form-group row">
                                        <div class="offset-sm-2 col-sm-10">
                                            <button type="submit" class="btn btn-danger">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
</section>